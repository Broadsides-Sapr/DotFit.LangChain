<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFrameworks>net4.6.2;netstandard2.0;net6.0;net7.0</TargetFrameworks>
        <RootNamespace>LangChain.Providers</RootNamespace>
        
        <!-- NU5104: A stable release of a package should not have a prerelease dependency. -->
        <NoWarn>$(NoWarn);NU5104</NoWarn>
        
        <!-- CS8002: Referenced assembly 'OpenAI, Version=7.0.0.0, Culture=neutral, PublicKeyToken=null' does not have a strong name. -->
        <NoWarn>$(NoWarn);CS8002</NoWarn>
    </PropertyGroup>

    <PropertyGroup Label="NuGet">
        <Description>OpenAI API LLM and Chat model provider.</Description>
        <PackageTags>langchain;llms;openai;api</PackageTags>
    </PropertyGroup>

    <ItemGroup>
        <PackageReference Include="Betalgo.OpenAI" />
        <PackageReference Include="Microsoft.SemanticKernel.Connectors.AI.OpenAI" />
        <PackageReference Include="PolySharp">
            <PrivateAssets>all</PrivateAssets>
            <IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
        </PackageReference>
    </ItemGroup>

    <ItemGroup>
        <PackageReference Include="OpenAI" />
    </ItemGroup>

    <ItemGroup>
        <ProjectReference Include="..\LangChain.Providers.Abstractions\LangChain.Providers.Abstractions.csproj" />
    </ItemGroup>

</Project>
