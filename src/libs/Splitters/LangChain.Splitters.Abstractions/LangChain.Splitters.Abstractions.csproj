    </PropertyGroup>

    <PropertyGroup Label="NuGet">
        <Description>LangChain Splitter abstractions.</Description>
        <PackageTags>langchain;splitters;abstractions</PackageTags>
    </PropertyGroup>

    <ItemGroup Label="Usings">
        <Using Remove="System.Net.Http" />
